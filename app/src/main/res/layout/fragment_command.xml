<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommandFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <ImageView
           android:layout_margin="@dimen/all"
           android:layout_gravity="center"
           android:src="@mipmap/ic_launcher"
           android:layout_width="100dp"
           android:layout_height="100dp"/>

       <TextView
           android:textSize="@dimen/top"
           android:textStyle="bold"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Plat"
           android:layout_marginTop="@dimen/top"
           android:layout_marginLeft="@dimen/left"
           />
       <Spinner
           android:layout_marginLeft="@dimen/all"
           android:id="@+id/spn_meal"

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="@dimen/all"
           />

       <TextView
           android:textSize="@dimen/top"
           android:textStyle="bold"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Quantité"
           android:layout_marginTop="@dimen/top"
           android:layout_marginLeft="@dimen/left"
           />

       <EditText
           android:id="@+id/txtQuantity"
           android:layout_margin="@dimen/all"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Entrer la quantité"
           android:gravity="center"

           />

       <Button
           android:id="@+id/btnCmd"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="@color/btnSignIn"
           android:layout_margin="@dimen/all"
           android:text="@string/command"
           />
   </LinearLayout>

</ScrollView>